<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_video_grid_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/grid_item_selector"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        tools:src="@drawable/grid_image_border_selected" />

    <TextView
        android:id="@+id/tv_video_grid_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_video_grid_item_image"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:ellipsize="end"
        android:lineSpacingExtra="5dp"
        android:lines="2"
        android:paddingStart="3sp"
        android:paddingEnd="0dp"
        android:textColor="@color/white_color"
        android:textSize="16sp"
        tools:text="@string/app_name" />

</RelativeLayout>